datasource db{
  provider = "sqlite"
  url = "file:./dev/db"
}

generator client{
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}


model Task{
  id Int @id @default(autoincrement())
  title String
  description String?
  status Boolean @default(false)
  userId Int
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

